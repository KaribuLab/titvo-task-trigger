{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "Node",
    "paths": {
      "@infrastructure/*": [
        "./src/infrastructure/*"
      ],
      "@auth/*": [
        "./auth/src/*"
      ],
      "@aws/*": [
        "./lib/aws/src/*"
      ],
      "@trigger/*": [
        "./trigger/src/*"
      ],
      "@shared/*": [
        "./shared/src/*"
      ]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts",
    "lib/aws/**/*.ts",
    "trigger/**/*.ts",
    "auth/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.js"
  ]
}